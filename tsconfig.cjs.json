{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/cjs",
    "module": "commonjs",
    "target": "es2019",

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    // Avoid conflicts with ESM settings
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
